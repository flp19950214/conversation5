<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--上面是头部命名空间-->
<!--mapper开始就是自己定义的了-->
<mapper namespace="com.kjgs.conversation.mysql.mapper.逻辑Mapper">    <!--对应的mapper类的包路径-->

    <select id="queryForObject" resultType="逻辑实体"> <!--传参是对象的话parameterType就写那个对象的路径,这边是int的type-->
        select * from 逻辑表 where 逻辑名 = #{逻辑名}
    </select>
    <select id="根据多个逻辑名查询List" resultType="String"> <!--传参是对象的话parameterType就写那个对象的路径,这边是int的type-->
        select distinct 逻辑 from 逻辑表
        <where>
            逻辑名 in
            <foreach collection="逻辑名集合" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>
</mapper>
